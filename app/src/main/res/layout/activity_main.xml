<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/pthead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pthread"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:onClick="pthread"/>

    <Button
        android:id="@+id/crash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="java crash"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:onClick="crash"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANR"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp"
        android:onClick="anr"/>

    <Button
        android:id="@+id/nativeAnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NATIVE_ANR"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp"
        android:onClick="nativeAnr"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NativeCrash"
        android:onClick="nativeCrash"/>

    <Button
        android:id="@+id/button_malloc_oom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NativeMallocOomCrash"
        android:onClick="nativeMallocOomCrash"/>

    <Button
        android:id="@+id/button_mmap_oom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NativeMmapOomCrash"
        android:onClick="nativeMmapOomCrash"/>

<!--    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upgrade"
        android:onClick="upgrade"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hotfix"
        android:onClick="hotfix"/>-->

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="newApp"
        android:onClick="newApp"/>
</LinearLayout>